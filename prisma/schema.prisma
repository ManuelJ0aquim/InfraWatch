datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id               String    @id @default(cuid())
  name             String
  email            String    @unique
  password         String
  role             Role      @default(USER)
  services         Service[]
  passwordResetToken String?
  passwordResetExpires DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}

model Service {
  id              String    @id @default(cuid())
  name            String
  type            ServiceType
  target          String 
  ownerId         String
  owner           User      @relation(fields: [ownerId], references: [id])
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

enum Role {
  ADMIN
  USER
}

enum ServiceType {
  HTTP
  PING
  SNMP
  WEBHOOK
}

enum Status {
  UP
  DOWN
}
